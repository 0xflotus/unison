ability Emit a where
  emit : a ->{Emit a} ()

type Stream e a r = Stream ('{e, Emit a} r)

use Stream Stream
use Optional None Some
use Universal ==

namespace Stream where

  step :
    (a ->{e} b) ->
    Effect {Emit a} r ->{e, Emit b} r
  step f e = case e of
    {r} -> r
    {Emit.emit a -> k} ->
      Emit.emit (f a)
      handle step f in k ()

