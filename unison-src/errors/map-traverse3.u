--map/traverse
effect Noop where
  noop : a -> {Noop} a

type List a = Nil | Cons a (List a)

map : (a ->{} b) -> List a -> List b
map f as = case as of
  List.Nil -> List.Nil
  List.Cons h t -> List.Cons (f h) (map f t)

